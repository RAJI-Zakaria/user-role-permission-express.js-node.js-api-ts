{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "rootDir": "./", // Set to the current directory
    "outDir": "dist", // Compiled files will go to the 'dist' folder
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts"], // Include all TypeScript files in your project
  "exclude": ["node_modules", "dist"]
}
